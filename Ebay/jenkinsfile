pipeline
{
   agent any
   environment
   {
      uname=credentials('username')
   }
   stages
   {
      stage("build")
      {
        steps
        {
           echo "build the code"
           echo $uname
        }
      }
       stage("test")
      {
        steps
        {
           echo "testing the code"
        }
      }
       stage("deploy")
      {
        steps
        {
         echo "deploye the code"
        }
      }
   }
}
